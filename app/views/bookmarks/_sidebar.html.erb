<div class="sidebar-block">
  <h3>メニュー</h3>
  <ul class="sidebar-menu">
    <li><%= link_to '全てのブックマーク', bookmarks_path %></li>
    <li><%= link_to '新規追加', new_bookmark_path %></li>
  </ul>
</div>

<div class="sidebar-block">
  <h3>最近の追加</h3>
  <ul class="recent-list">
    <% Bookmark.order(created_at: :desc).limit(5).each do |b| %>
      <li><%= link_to truncate(b.title, length: 30), bookmark_path(b) %></li>
    <% end %>
  </ul>
</div>